<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="AppTheme" parent="Theme.MaterialComponents.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:windowBackground">@android:color/white</item>
    <item name="actionBarTheme">@style/AccentActionBar</item>
    <!--api 21-->
    <item name="android:colorEdgeEffect" tools:targetApi="21">@android:color/black</item>
    <!--api 23-->
    <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    <!--api 27-->
    <item name="android:navigationBarColor" tools:targetApi="27">@android:color/white</item>
    <item name="android:navigationBarDividerColor" tools:targetApi="27">@color/gray88</item>
    <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
  </style>

  <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="windowNoTitle">true</item>
    <item name="android:windowBackground">@drawable/bg_dialog_shape</item>
    <item name="colorControlHighlight">@color/transparentAccent</item>
    <item name="android:windowCloseOnTouchOutside">false</item>
    <!--api 21-->
    <item name="android:colorEdgeEffect" tools:targetApi="21">@android:color/black</item>
  </style>

  <style name="DialogButtonAppearance" parent="TextAppearance.AppCompat.Widget.Button">
    <item name="android:textColor">@color/dialog_button_color</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="ConfigureButtonAppearance" parent="Widget.AppCompat.Button.Colored">
    <item name="android:background">@drawable/bg_button_shape</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <style name="AccentActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
    <item name="android:textColorPrimary">@color/colorAccent</item>
  </style>
</resources>
