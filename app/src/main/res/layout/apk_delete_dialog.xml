<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <TextView
      android:id="@+id/dialog_message_textview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/action_bar_inset"
      android:layout_marginStart="@dimen/action_bar_inset"
      android:layout_marginTop="24dp"
      android:textColor="@color/textPrimary"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="My delete message"
      />

  <TextView
      android:id="@+id/dialog_cancel_textview"
      android:text="@string/cancel"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/dialog_delete_textview"
      app:layout_constraintTop_toBottomOf="@id/dialog_message_textview"
      style="@style/DialogNestedButtonAppearance"
      />

  <TextView
      android:id="@+id/dialog_delete_textview"
      android:text="@string/delete"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/dialog_message_textview"
      style="@style/DialogNestedButtonAppearance"
      />

</androidx.constraintlayout.widget.ConstraintLayout>